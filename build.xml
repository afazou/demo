<?xml version="1.0" encoding="UTF-8"?>
<project name="pexample" default="prepare">
    <target name="prepare">
        <mkdir dir="${project.basedir}/build/coverage"/>
        <mkdir dir="${project.basedir}/build/logs"/>
        <!--failonerror：当出现错误时自动停止-->
        <exec failonerror="true" command="phpunit --configuration ${project.basedir}'/kefu-client/phpunit-db.xml'"/>
    </target>
</project>


