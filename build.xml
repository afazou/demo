<?xml version="1.0" encoding="UTF-8"?>
<project name="pexample" default="phpmd-ci">






    <target name="phpmd">
        <exec executable="/usr/local/bin/phpmd">
            <arg path="/opt/www/demo-b/kefu-client/src" />
            <arg value="text" />
            <arg path="/opt/www/demo-b/phpmd.xml" />
        </exec>
    </target>

    <target name="phpmd-ci" depends="phpmd">
        <mkdir dir="${project.basedir}/build/coverage"/>
        <mkdir dir="${project.basedir}/build/logs"/>
        <exec executable="/usr/local/bin/phpmd">
            <arg path="/opt/www/demo-b/kefu-client/src" />
            <arg value="xml" />
            <arg path="/opt/www/demo-b/phpmd.xml" />
            <arg value="--reportfile" />
            <arg path="/opt/www/demo-b/build/logs/pmd.xml" />
        </exec>
    </target>





</project>


