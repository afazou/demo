<?xml version="1.0" encoding="UTF-8"?>
<project name="phpmd.example" default="prepare" basedir=".">
    <target name="prepare"
            unless="prepare.done"
            description="Prepare for build">
        <mkdir dir="${basedir}/build/api"/>
        <mkdir dir="${basedir}/build/coverage"/>
        <mkdir dir="${basedir}/build/logs"/>
        <mkdir dir="${basedir}/build/pdepend"/>
        <mkdir dir="${basedir}/build/phpdox"/>
        <property name="prepare.done" value="true"/>
    </target>

    <target name="phpunit" depends="prepare">
        <!--failonerror：当出现错误时自动停止-->
        <exec executable="/usr/local/bin/phpunit" failonerror="true">
            <arg value="--configuration"/>
            <arg value="${basedir}/kefu-client/phpunit-db.xml"/>
        </exec>
    </target>
</project>


