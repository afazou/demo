<?xml version="1.0" encoding="UTF-8"?>
<project name="pexample" default="prepare">
    <!--failonerror：当出现错误时自动停止-->
    <target name="prepare" description="Run unit tests with PHPUnit">
        <mkdir dir="${project.basedir}/build/coverage"/>
        <mkdir dir="${project.basedir}/build/logs"/>
        <exec executable="/usr/local/bin/phpunit" failonerror="true">
            <arg value="--configuration"/>
            <arg value="/opt/www/demo-b/kefu-client/phpunit-db.xml"/>
        </exec>
    </target>

</project>


