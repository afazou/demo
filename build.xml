<?xml version="1.0" encoding="UTF-8"?>
<project name="DEMOTest" default="phpmd-example">

    <taskdef name="phpmd" classname="org.phpmd.ant.PHPMDTask"/>
    <target name="phpmd-example">
        <phpmd rulesetfiles="unusedcode" failonerror="off">
            <formatter type="xml" toFile="${project.basedir}/pmd.xml" />
            <fileset dir="${project.basedir}/src">
                <include name="*.php" />
            </fileset>
        </phpmd>
    </target>

</project>